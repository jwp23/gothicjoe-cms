{
  "name": "mordant/gothicjoe-cms",
  "type": "project",
  "license": "BSD-3-Clause",
  "description": "The CMS for the Gothic Joe website",
  "homepage": "https://www.gothicjoe.com",
  "authors": [
    {
      "name": "Joseph Presley",
      "email": "mordant23@gmail.com",
      "homepage": "https://www.gothicjoe.com"
    }
  ],
  "keywords": [
    "bedrock", "roots", "wordpress", "stack", "composer", "vagrant", "wp"
  ],
  "config": {
    "preferred-install": "dist"
  },
  "require": {
    "php": ">=5.6",
    "composer/installers": "~1.0.12",
    "vlucas/phpdotenv": "^2.0.1",
    "johnpbloch/wordpress": "4.7.1",
    "oscarotero/env": "^1.0",
    "roots/wp-password-bcrypt": "1.0.0",
    "wpackagist-plugin/jetpack": "^4.4.2",
    "wpackagist-plugin/wordpress-seo": "^4.0.2"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^2.5.1"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "test": [
      "vendor/bin/phpcs"
    ]
  },
  "repositories": {
    "wpackagist": {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  }
}
